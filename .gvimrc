cd ~

" don't use viminfo file"
set viminfo=

" don't use swap file"
set noswapfile

" don't use backup file"
set nobackup

" enable highlight"
syntax on

" setting IME behavior"
set iminsert=0 imsearch=0
inoremap <silent> <ESC> <ESC>

" setting Font"
set guifont='Migu 1M':h12

set background=light
" colorscheme ron
